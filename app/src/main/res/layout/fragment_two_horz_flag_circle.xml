<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <GridView
        android:id="@+id/list_item_colors"
        android:numColumns="auto_fit"
        android:columnWidth="40dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="100dp" >

    </GridView>
    <com.jcsoluciones.superdt.shapes.TwoHorzCircleFlagView
        android:id="@+id/flag_circle"
        android:layout_below="@+id/list_item_colors"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_next_two_horz_flag"
        android:layout_width="match_parent"
        android:layout_below="@id/flag_circle"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_omit"
        android:layout_below="@id/btn_next_two_horz_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>